<div class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "myRecipes", "/home", class: "navbar-brand", id: "logo" %>    
    </div> <!-- Navbar header -->
    
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Recipes", recipes_path, class: "nav-item" %></li>
        <li class="divider"></li>
        <li><%= link_to "Chefs", chefs_path, class: "nav-item" %></li>
        <!-- Styles dropdown menu -->
        <li>
          <div class="btn-group">
            <button type="button" class="nav-offset btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Styles <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'All', recipes_path %>
              <li class="divider"></li>
              <% Style.all.each do |style| %>
                <li>
                  <%= link_to style.name.capitalize, style_path(style) %>
                </li>
              <% end %>
              <% if current_user %>
                <li class="divider"></li>
                <li><%= link_to 'New Style', new_style_path %>
              <% end %>
            </ul>
          </div>
        </li> <!-- Styles dropdown menu -->

        <!-- Ingredients dropdown menu -->
        <li>
          <div class="btn-group">
            <button type="button" class="nav-offset btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Ingredients <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'All', recipes_path %></li>
              <li class="divider"></li>
              <% Ingredient.all.each do |ingredient| %>
                <li>
                  <%= link_to ingredient.name.capitalize, ingredient_path(ingredient) %>
                </li>
              <% end %>
              <% if current_user %>
                <li class="divider"></li>
                <li><%= link_to 'New Ingredient', new_ingredient_path %>
              <% end %>
            </ul>
          </div>
        </li> <!-- Ingredients dropdown menu -->

        <% if current_user %>
          <li><%= link_to "New Recipe", new_recipe_path, class: "nav-item"%></li>
        <% end %>
      </ul>
      
      <% if current_user %>
        <ul class="nav navbar-nav navbar-right">
          <div class="btn-group">
            <button type="button" class="nav-offset btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.chefname %> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'View Profile', chef_path(current_user) %></li>
              <li><%= link_to 'Edit Profile', edit_chef_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Logout', logout_path %></li>
            </ul>
          </div>
        </ul>
      <% else %>
        <%= link_to 'Log in', login_path, class: 'btn btn-primary nav-offset navbar-right', id: 'navbar-login' %>
        <%= link_to 'Register', new_chef_path, class: 'btn btn-success nav-offset navbar-right' %> 
      <% end %>


      
    </div><!-- collapse navbar-collapse -->
  </div><!--container-fluid -->
</div><!-- navbar navbar-default -->